<?xml version="1.0" encoding="UTF-8"?>
<DDDefinition xmlns="http://www.cern.ch/cms/DDL"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.cern.ch/cms/DDL ../../DDLSchema/DDLSchema.xsd">
    <ConstantsSection label="CTPPS_SecondTr_2_Station.xml">
        <Constant name="CTPPS_SecondTr_2_Station_Length" value="2*([CTPPS_Device:CTPPS_Device_Length_z])*mm"/>

        <Constant name="CTPPS_SecondTr_2_Sec_Rot_Angle" value="8"/>
        <Constant name="CTPPS_SecondTr_2_Sec_Rot_Angle_neg8" value="-8"/>
        <Constant name="CTPPS_SecondTr_2_Sec_Rot_Angle_180" value="180"/>
        <Constant name="CTPPS_SecondTr_2_Sec_Rot_Angle_172" value="172"/>
        
        <Constant name="CTPPS_SecondTr_2_Hor_Vac_Length" value="[CTPPS_Device:CTPPS_Device_Envelope_Radius]+[CTPPS_Device:CTPPS_Device_Length_y]/2-[CTPPS_Horizontal_Device:RP_Device_Hor_Closed_Wall_Thick_Int]"/>
    </ConstantsSection>

    <RotationSection label="CTPPS_SecondTr_2_Station.xml">
        <Rotation name="RP_x_90_rot8" 
            phiX="(0+[CTPPS_SecondTr_2_Sec_Rot_Angle]+[CTPPS_SecondTr_2_Sec_Rot_Angle])*deg" thetaX="(90)*deg" 
            phiY="(0)*deg" thetaY="180*deg" 
            phiZ="(90+[CTPPS_SecondTr_2_Sec_Rot_Angle]+[CTPPS_SecondTr_2_Sec_Rot_Angle])*deg" thetaZ="90*deg"/>
        <Rotation name="CTPPS_SecondTr_2_Sec_Rotation" 
            phiX="[CTPPS_SecondTr_2_Sec_Rot_Angle]*deg" thetaX="90*deg" 
            phiY="(90+[CTPPS_SecondTr_2_Sec_Rot_Angle])*deg" thetaY="90*deg"
            phiZ="0*deg" thetaZ="0*deg"/>
        <Rotation name="CTPPS_SecondTr_2_Sec_Rotation_neg8" 
            phiX="[CTPPS_SecondTr_2_Sec_Rot_Angle_neg8]*deg" thetaX="90*deg" 
            phiY="(90+[CTPPS_SecondTr_2_Sec_Rot_Angle_neg8])*deg" thetaY="90*deg"
            phiZ="0*deg" thetaZ="0*deg"/>
        <Rotation name="CTPPS_SecondTr_2_Sec_Rotation_180" 
            phiX="[CTPPS_SecondTr_2_Sec_Rot_Angle_180]*deg" thetaX="90*deg" 
            phiY="(90+[CTPPS_SecondTr_2_Sec_Rot_Angle_180])*deg" thetaY="90*deg"
            phiZ="0*deg" thetaZ="0*deg"/>
        <Rotation name="CTPPS_SecondTr_2_Sec_Rotation_172" 
            phiX="[CTPPS_SecondTr_2_Sec_Rot_Angle_172]*deg" thetaX="90*deg" 
            phiY="(90+[CTPPS_SecondTr_2_Sec_Rot_Angle_172])*deg" thetaY="90*deg"
            phiZ="0*deg" thetaZ="0*deg"/>
        <Rotation name="CTPPS_SecondTr_2_90_y_Sec_Rotation" 
            phiX="0*deg" thetaX="180*deg" 
            phiY="(90+[CTPPS_SecondTr_2_Sec_Rot_Angle_neg8])*deg" thetaY="90*deg" 
            phiZ="(0+[CTPPS_SecondTr_2_Sec_Rot_Angle_neg8])*deg" thetaZ="90*deg"/>
        <Rotation name="CTPPS_SecondTr_2_90_x_Sec_Rotation" 
            phiX="(0+[CTPPS_SecondTr_2_Sec_Rot_Angle])*deg" thetaX="90*deg" 
            phiY="0*deg" thetaY="180*deg" 
            phiZ="(90+[CTPPS_SecondTr_2_Sec_Rot_Angle])*deg" thetaZ="90*deg"/>
    </RotationSection>
    
    <SolidSection label="CTPPS_SecondTr_2_Station.xml">  
        <Tube rMin="0*mm" rMax="[CTPPS_Device:CTPPS_Device_Envelope_Radius]*1.1" dz="[CTPPS_SecondTr_2_Station_Length]/2" name="CTPPS_SecondTr_2_Station"/>
        <Tube rMin="[CTPPS_Device:CTPPS_Device_Beam_Hole_Diam]/2" rMax="[CTPPS_Device:CTPPS_Device_Beam_Hole_Diam]/2+[CTPPS_Device:CTPPS_Device_Wall_Thickness]" dz="[CTPPS_Device:CTPPS_Device_Length_z]/4" name="CTPPS_SecondTr_2_Station_Tube_1"/>
        <Tube rMin="[CTPPS_Device:CTPPS_Device_Beam_Hole_Diam]/2" rMax="[CTPPS_Device:CTPPS_Device_Beam_Hole_Diam]/2+[CTPPS_Device:CTPPS_Device_Wall_Thickness]" dz="[CTPPS_Device:CTPPS_Device_Length_z]/4" name="CTPPS_SecondTr_2_Station_Tube_3"/>
        <Tube rMin="0*mm" rMax="[CTPPS_Device:CTPPS_Device_Beam_Hole_Diam]/2" dz="([CTPPS_Device:CTPPS_Device_Length_z])" name="CTPPS_SecondTr_2_Station_Vacuum_1"/>

        <Polycone name="CTPPS_SecondTr_2_Station_Hor_Vacuum" startPhi="0*deg" deltaPhi="360*deg" >
            <ZSection z="-[CTPPS_Device:CTPPS_Device_Length_y]/2+[CTPPS_Horizontal_Device:RP_Device_Hor_Closed_Wall_Thick_Int]" rMin="0*mm" rMax="[CTPPS_Device:CTPPS_Device_RP_Hole_Diam]/2"/>
            <ZSection z="-[CTPPS_Device:CTPPS_Device_Length_y]/2+[CTPPS_Horizontal_Device:RP_Device_Hor_Closed_Wall_Thick_Int] + [CTPPS_SecondTr_2_Hor_Vac_Length]" rMin="0*mm" rMax="[CTPPS_Device:CTPPS_Device_RP_Hole_Diam]/2"/>
        </Polycone> 
        <UnionSolid name="CTPPS_SecondTr_2_Station_Vacuum_5">
            <rSolid name="CTPPS_SecondTr_2_Station_Vacuum_1"/>
            <rSolid name="CTPPS_SecondTr_2_Station_Hor_Vacuum"/>
            <rRotation name="CTPPS_Transformations:CTPPS_y_90_rot"/> <!--CTPPS_SecondTr_2_90_y_Sec_Rotation"/>-->
            <Translation x="0*mm" y="0*mm" z="0*mm"/>
        </UnionSolid>
    </SolidSection>
    
    <LogicalPartSection label="CTPPS_SecondTr_2_Station.xml">
        <LogicalPart name="CTPPS_SecondTr_2_Station">
            <rSolid name="CTPPS_SecondTr_2_Station"/>
            <rMaterial name="CTPPS_Materials:Air"/>
        </LogicalPart>
        <LogicalPart name="CTPPS_SecondTr_2_Station_Tube_1">
            <rSolid name="CTPPS_SecondTr_2_Station_Tube_1"/>
            <rMaterial name="CTPPS_Materials:AISI-316L-Steel"/>
        </LogicalPart>
        <LogicalPart name="CTPPS_SecondTr_2_Station_Tube_3">
            <rSolid name="CTPPS_SecondTr_2_Station_Tube_3"/>
            <rMaterial name="CTPPS_Materials:AISI-316L-Steel"/>
        </LogicalPart>
        <LogicalPart name="CTPPS_SecondTr_2_Station_Vacuum_5">
            <rSolid name="CTPPS_SecondTr_2_Station_Vacuum_5"/>
            <rMaterial name="CTPPS_Materials:RP_Primary_Vacuum"/>
        </LogicalPart>
    </LogicalPartSection>
    
    <PosPartSection label="CTPPS_SecondTr_2_Station.xml">
        <PosPart copyNumber="1">
            <rParent name="CTPPS_SecondTr_2_Station"/>
            <rChild name="CTPPS_Horizontal_Device:RP_Device_Hor_Corp_3"/>
            <rRotation name="CTPPS_SecondTr_2_Sec_Rotation_172"/>
            <Translation x="0*mm" y="0*mm" z="0*mm"/>
        </PosPart>
        
        <PosPart>
            <rParent name="CTPPS_SecondTr_2_Station"/>
            <rChild name="CTPPS_SecondTr_2_Station_Tube_1"/>
            <Translation x="0*mm" y="0*mm" z="-[CTPPS_Device:CTPPS_Device_Length_z]/4+[CTPPS_SecondTr_2_Station_Length]/2"/>
        </PosPart>
        <PosPart>
            <rParent name="CTPPS_SecondTr_2_Station"/>
            <rChild name="CTPPS_SecondTr_2_Station_Tube_3"/>
            <Translation x="0*mm" y="0*mm" z="([CTPPS_Device:CTPPS_Device_Length_z]/4-[CTPPS_SecondTr_2_Station_Length]/2)"/>
        </PosPart>
        <PosPart>
            <rParent name="CTPPS_SecondTr_2_Station"/>
            <rChild name="CTPPS_SecondTr_2_Station_Vacuum_5"/>
            <rRotation name="CTPPS_SecondTr_2_Sec_Rotation_172"/>
        </PosPart>

        <PosPart copyNumber="003">
            <rParent name="CTPPS_SecondTr_2_Station_Vacuum_5"/>
            <rChild name="CTPPS_Box_003:RP_box_primary_vacuum"/>
            <rRotation name="CTPPS_Transformations:CTPPS_90_cw_z_rot"/>
            <Translation x="-(-[RP_Dist_Beam_Cent:CTPPS_SecondTr_2_Det_Dist_3]-[CTPPS_Box:CTPPS_Box_primary_vacuum_y]/2)" y="0*mm" z="0*mm"/>
        </PosPart>
    </PosPartSection>
</DDDefinition>
